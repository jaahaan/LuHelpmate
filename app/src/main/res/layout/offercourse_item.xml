<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/batchItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/paleSilver"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cCode"
                style="@style/courseList"
                android:layout_weight="1"
                tools:text="code" />

            <TextView
                android:id="@+id/cTitle"
                style="@style/courseList"
                android:layout_weight="2"
                tools:text="title" />

            <TextView
                android:id="@+id/cCredit"
                style="@style/courseList"
                android:layout_weight="1"
                tools:text="credit" />

            <TextView
                android:id="@+id/cPrerequisite"
                style="@style/courseList"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="pre" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/backgroundeditview"
            android:layout_margin="5dp"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Assigned Teacher: "
                android:textColor="@color/EerieBlack_800" />

            <TextView
                android:id="@+id/teacherInitial"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/teacherInitial"
                android:textColor="@color/EerieBlack_800" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>