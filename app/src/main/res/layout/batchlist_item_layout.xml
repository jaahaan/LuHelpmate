<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/paleSilver"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/batchList"
            style="@style/courseList"
            android:layout_weight="1"
            tools:text="@string/batch" />

        <TextView
            android:id="@+id/sectionList"
            style="@style/courseList"
            android:textAllCaps="true"
            android:layout_weight="1"
            tools:text="@string/section" />
        <ImageView
            android:id="@+id/deleteBatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circleblack"
            android:padding="5dp"
            android:src="@drawable/delete_white" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/blackOlive_500" />



</LinearLayout>