<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/paleSilver"
        android:padding="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/crImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            app:civ_border_color="@color/EerieBlack_800"
            app:civ_border_width="2dp" />


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/crImage"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/crBatch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/EerieBlack_800"
                android:textStyle="bold"
                tools:text="@string/batch" />

            <TextView
                android:id="@+id/crSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/EerieBlack_800"
                android:textStyle="bold"
                tools:text="@string/section" />

        </LinearLayout>

        <TextView
            android:id="@+id/crName"
            style="@style/facultyAndCrList"
            android:layout_below="@+id/linear"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/crImage"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="@string/name" />

        <TextView
            android:id="@+id/crId"
            style="@style/facultyAndCrList"
            android:layout_below="@+id/crName"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/crImage"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="@string/id" />

        <TextView
            android:id="@+id/crContact"
            style="@style/facultyAndCrList"
            android:layout_below="@+id/crId"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/crImage"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="Contact" />

        <TextView
            android:id="@+id/crEmail"
            style="@style/facultyAndCrList"
            android:layout_below="@+id/crContact"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/crImage"
            android:textAppearance="?android:textAppearanceSmall"
            tools:text="Email" />


        <ImageView
            android:id="@+id/updateCr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:layout_alignParentEnd="true"
            android:src="@drawable/edit_icon" />

        <ImageView
            android:id="@+id/deleteCr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updateCr"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/delete_icon" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
