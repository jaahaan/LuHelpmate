<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.OfferCourseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/listView"
            android:text="@string/program"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/paleSilver" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/flame_500"
            android:gravity="center"
            android:padding="5dp"
            android:text="Offer Course"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/floralWhite" />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/backgroundeditview"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/addSemester"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Semester"
                    android:imeOptions="actionSearch"
                    android:padding="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/addBatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Batch"
                    android:imeOptions="actionSearch"
                    android:inputType="number"
                    android:padding="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/codeC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/CourseCode"
                android:inputType="textCapCharacters"
                android:imeOptions="actionSearch"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/titleC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/CourseTitle"
                android:imeOptions="actionSearch"
                android:inputType="textCapWords"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/creditC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/credit"
                android:imeOptions="actionSearch"
                android:inputType="numberDecimal"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/prerequisiteC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prerequisite"
                android:inputType="textCapCharacters"
                android:imeOptions="actionSearch"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/teacherInitial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/teacherInitial"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/update" />

    </LinearLayout>
    </LinearLayout>

</ScrollView>