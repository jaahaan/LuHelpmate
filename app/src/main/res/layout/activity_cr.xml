<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleSilver"
    android:minHeight="100dp"
    android:orientation="horizontal"
    tools:context=".CRActivity">

    <TextView
        android:id="@+id/batch"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:background="@drawable/circleblack"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/floralWhite"
        android:textSize="20sp"
        tools:text="@string/batch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/cr_name"
            style="@style/facultyAndCrList"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/EerieBlack_800"
            android:textStyle="bold"
            tools:text="@string/crName" />

        <TextView
            android:id="@+id/crId"
            style="@style/facultyAndCrList"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="@string/id" />

        <TextView
            android:id="@+id/crPhoneNo"
            style="@style/facultyAndCrList"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="@string/phoneNumber" />

    </LinearLayout>
</LinearLayout>
